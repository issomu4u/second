                                                        <li>
                                                            @if (ViewBag.CategoryId != null)
                                                            {
                                                                <a href="#" id="View_@ViewBag.CategoryId" class="add_node">Add Node</a>
                                                            }
                                                        </li>
                                                    </ul>*@
                                                </div>
                                            </li>
                                        </ul>
                                    }
