    function RequestHtmlDataPost(reqtype, requestUrl, dataPayload, successfunc, errorfunc, synchronousMode) {
        return $.ajax({
            type: reqtype,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            url: requestUrl,
            data: dataPayload,
            success: successfunc,
            error: errorfunc,
            async: synchronousMode
        });
    }

   
